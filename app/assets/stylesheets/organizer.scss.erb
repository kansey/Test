@import url(https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300|Gruppo);
@import url(https://fonts.googleapis.com/css?family=Cabin+Sketch:700);
@import url(https://fonts.googleapis.com/css?family=Shadows+Into+Light);
@import url(https://fonts.googleapis.com/css?family=Audiowide|Open+Sans+Condensed:300|Rajdhani|Unica+One);
@import url(https://fonts.googleapis.com/css?family=Open+Sans|Hind|Six+Caps|Wire+One);

body{
  padding: 0;
  margin: 0;
  background-color: white;
  background-image: url('<%= asset_path("bg.png") %>');
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

button{position:absolute}

.addArea{
  position: absolute;
  width: 20px;
  height: 20px;
  background-size: 15px 15px;
  background-repeat: no-repeat;
  background-position: center;
  background-image: url('<%= asset_path("add.png") %>');
}

.subjectArea{
  position: absolute;
  margin: 0;
  outline: 1px solid #e2e2e2;

  .rightSlider{
    cursor: ew-resize;
    position: absolute;
  }

  .bottomSlider{
    cursor: ns-resize;
    position: absolute;
  }

  .middleSlider{
    cursor: nwse-resize;
    position: absolute;
    bottom: 0;
    right: 0;
    width: 10px;
    height: 10px;
    background-image: url('<%= asset_path("resize.png") %>');
  }

  h1{
    font-family: 'Ubuntu Medium';
    margin: 0;
    padding: 0 7px;
    border-radius: 0 0 5px 0;
    position: absolute;
    background-color: #e2e2e2;
  }

  .delete{
    width: 20px;
    height: 20px;
    float: right;
    background-image: url('<%= asset_path("delete.png") %>');
    background-size: 15px 15px;
    background-repeat: no-repeat;
    background-position: center;
    border-radius: 3px;
  }
  .delete:active{background-color: grey}

  .addSubject{
    float: right;
    width: 20px;
    height: 20px;
    background-size: 15px 15px;
    background-repeat: no-repeat;
    background-position: center;
    background-image: url('<%= asset_path("add.png") %>');
  }

  .subject{
    position: absolute;
    background-color: #666;
    color: #d5d4d3;
    .addTask{
      float: right;
      width: 20px;
      height: 20px;
      background-size: 15px 15px;
      background-repeat: no-repeat;
      background-position: center;
      background-image: url('<%= asset_path("add.png") %>');
    }

    .expand:active{background-color: grey}
    .edit{
      width: 20px;
      height: 20px;
      float: right;
      background-image: url('<%= asset_path("edit.png") %>');
      background-size: 15px 15px;
      background-repeat: no-repeat;
      background-position: center;
      border-radius: 3px;
    }
    .edit:active{background-color: grey}
    .start{
      width: 25px;
      height: 25px;
      background-image: url('<%= asset_path("start.png") %>');
      background-size: 25px 25px;
      background-repeat: no-repeat;
      background-position: center;
      float: left;
    }
    h3{
      margin: 0;
      position: absolute;
      font-family: 'Cabin Sketch', cursive;
      padding: 0 9px;
      color: black;
      .titleDecor{
        width: 26px;
        right: -20px;
        height: 22px;
        background-color: white;
        transform: skew(-30deg);
        position: absolute;
        float: left;
      }
    }

    .watch{
      font-family: 'Hind', sans-serif;
      font-size: 20px;
      position: absolute;
      bottom: 12px;
      right: 5px;
      //outline: 1px white solid;
    }
    .infoLine{
      position: absolute;
      bottom: 5px;
      right: 5px;
      //outline: 1px white solid;
      font-size: 10px;
      font-family: 'sans-serif';
    }
    .task{
      outline: 1px black solid;
      width: auto;
      margin: 5px;
      height: 25px;
      padding:7px 5px 5px;
    }
  }
}
